@model IList<ctorx.Core.Messaging.IMessage>

<div class="messages container @(!Model.Any() ? "hidden" : "")">
    <div class="row">
        <div class="col-lg-12">
            @foreach (var message in Model)
            {
                var alertClass = "";

                switch (@message.Type.ToString().ToLower())
                {
                    case "error":
                        alertClass = "alert-danger";
                        break;
                    case "warn":
                        alertClass = "alert-warning";
                        break;
                    case "info":
                        alertClass = "alert-info";
                        break;
                    case "success":
                        alertClass = "alert-success";
                        break;
                }

                <div class="alert @alertClass" role="alert">
                    @Html.Raw(message.Text)
                </div>
            }
            <ul></ul>
        </div>
    </div>
</div>

