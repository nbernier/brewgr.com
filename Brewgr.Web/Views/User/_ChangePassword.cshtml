@model ChangePasswordViewModel
@using (Html.BeginForm("ChangePassword", "Auth", FormMethod.Post))
{
    <h3 class="margintop10">Change Your Password</h3>

    <div class="form-group">

        <div class="row">
            <div class="col-xs-12 col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.CurrentPassword, "Current Password")
                    @Html.TextBoxFor(m => m.CurrentPassword, new { type = "password", @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12 col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.NewPassword, "New Password")
                    @Html.TextBoxFor(m => m.NewPassword, new { type = "password", @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12 col-sm-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmNewPassword, "Re-Type New Password")
                    @Html.TextBoxFor(m => m.ConfirmNewPassword, new { type = "password", @class = "form-control" })
                </div>
            </div>
        </div>

        <input type="submit" class="btn btn-success btn-lg" value="Set New Password" />

        <div class="fb-note">
            <p>
                If you created your account via Facebook or you can't remember your current password,
                you can reset your password <a href="@Url.Action("reset-password", "Auth")" class="bold">here</a>
            </p>
        </div>

    </div>



}
