@model PasswordResetViewModel

@{
	ViewBag.Title = "Reset Your Password";

    var isInDialog = !string.IsNullOrWhiteSpace(Request["LoginViaDialog"]);
    
    if (isInDialog)
    {
        this.Layout = "~/Views/Shared/_LayoutNoShell.cshtml";
    }
}
@using (Html.BeginForm())
{
<div id="view-resetpassword" class="container view">
    <div class="row">
        <div class="col-xs-6">
            <h2>Reset Your Password</h2>
            <p>Enter the email address you used when you signed up and we'll send you a link to reset your password.</p>
            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(m => m.EmailAddress, "Email", new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.EmailAddress, "required", new { @class = "form-control", placeholder = "Email" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <input type="submit" class="btn btn-default" value="Send Email" />
                        @if (isInDialog)
                        {
                        <input type="hidden" name="LoginViaDialog" value="true" />
                        <text>&nbsp;</text>
                        <a href="@Url.Action("LoginViaDialog")">cancel</a>
                        }
                    </div>
                </div>
            </div>
               
        </div>
    </div>
</div>
}
