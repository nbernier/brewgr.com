@*@model BrewSessionViewModel
<form class="form-horizontal">
    <div class="row">
        <div class="col-sm-6" id="s_waterIn">
            <h3>Brew Session Specific</h3>


            <div class="form-group">
                <label class="col-sm-5 control-label">
                    Grain Weight
                    <span class="helptip" original-title="The amount of grain in that will be added to the mash. Do not include sugars, honey, molasess, etc. as they do not absorb any liquid">&nbsp;</span>
                </label>
                <div class="col-sm-4 col-xs-10">
                    <input type="text" data-name="s_GrainWeight" value="@Model.GrainWeight" class="wc_trig wc_grain form-control" data-filter="positiveFloat" />
                </div>
                <div class="col-sm-3 col-xs-2 measurement">
                    <span data-unit="s">lb</span>
                    <span data-unit="m">kg</span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-5 control-label">
                    Grain Temp
                    <span class="helptip" original-title="The temperature of the crushed grain that will be mashed">&nbsp;</span>
                </label>
                <div class="col-sm-4 col-xs-10">
                    <input type="text" data-name="s_GrainTemp" value="@Model.GrainTemp" class="wc_trig wc_grainTemp form-control" data-filter="positiveFloat" />
                </div>
                <div class="col-sm-3 col-xs-2 measurement">
                    <span>@Html.Raw("&deg;")<span data-unit="s">F</span><span data-unit="m">C</span></span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-5 control-label">
                    Total Boil Time
                    <span class="helptip" original-title="The total amount of time that the wort will be boiled">&nbsp;</span>
                </label>
                <div class="col-sm-4 col-xs-10">
                    <input type="text" data-name="s_BoilTime" value="@Model.BoilTime" class="wc_trig wc_boilTime form-control" data-filter="positiveInt" />
                </div>
                <div class="col-sm-3 col-xs-2 measurement">
                    <span>min.</span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-5 control-label">
                    Wort Into Fermenter
                    <span class="helptip" original-title="The total volume of wort that will be collected in the fermenter">&nbsp;</span>
                </label>
                <div class="col-sm-4 col-xs-10">
                    <input type="text" data-name="s_FermentVolume" value="@Model.FermentVolumeEst" class="wc_trig wc_fermentVol form-control" data-filter="positiveFloat" />
                </div>
                <div class="col-sm-3 col-xs-2 measurement">
                    <span data-unit="s">gals</span>
                    <span data-unit="m">liters</span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-5 control-label">
                    Target Mash Temp
                    <span class="helptip" original-title="The target temperature for the mash in the mash tun">&nbsp;</span>
                </label>
                <div class="col-sm-4 col-xs-10">
                    <input type="text" data-name="s_TargetMashTemp" value="@Model.TargetMashTemp" class="wc_trig wc_targetMashTemp form-control" data-filter="positiveFloat" />
                </div>
                <div class="col-sm-3 col-xs-2 measurement">
                    <span>@Html.Raw("&deg;")<span data-unit="s">F</span><span data-unit="m">C</span></span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-5 control-label">
                    Mash Thickness
                    <span class="helptip" original-title="The thickness of the mash, the water to grain ratio in the mash tun. A thick mash would be a low number (i.e. 1.2) and a thin mash would be a high number (i.e. 1.6). An average is 1.33 qt/lb">&nbsp;</span>
                </label>
                <div class="col-sm-4 col-xs-10">
                    <input type="text" data-name="s_MashThickness" value="@Model.MashThickness" class="wc_trig wc_mashThickness form-control" data-filter="positiveFloat" />
                </div>
                <div class="col-sm-3 col-xs-2 measurement">
                    <span data-unit="s">qt/lb</span><span data-unit="m">l/kg</span>
                </div>
            </div>



            <h3>Equipment Profile</h3>

            <div class="form-group">
                <label class="col-sm-5 control-label">
                    Brew Kettle Trub Loss
                    <span class="helptip" original-title="The amount of dead space in your brew kettle after boil">&nbsp;</span>
                </label>
                <div class="col-sm-4 col-xs-10">
                    <input type="text" data-name="s_BrewKettleLoss" value="@Model.BrewKettleLoss" class="wc_trig wc_kettleLoss form-control" data-filter="positiveFloat" />
                </div>
                <div class="col-sm-3 col-xs-2 measurement">
                    <span data-unit="s">gals</span>
                    <span data-unit="m">liters</span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-5 control-label">
                    Wort Shrinkage
                    <span class="helptip" original-title="The amount the boiled wort will shrink when cooled.  Average is .2 gals for a 5 gallon batch">&nbsp;</span>
                </label>
                <div class="col-sm-4 col-xs-10">
                    <input type="text" data-name="s_WortShrinkage" value="@Model.WortShrinkage" class="wc_trig wc_wortShrinkage form-control" data-filter="positiveFloat" />
                </div>
                <div class="col-sm-3 col-xs-2 measurement">
                    <span data-unit="s">gals</span>
                    <span data-unit="m">liters</span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-5 control-label">
                    Mash Tun Loss
                    <span class="helptip" original-title="Amount of dead space in your mash tun and any liquid that doesn't get into your brew kettle">&nbsp;</span>
                </label>
                <div class="col-sm-4 col-xs-10">
                    <input type="text" data-name="s_MashTunLoss" value="@Model.MashTunLoss" class="wc_trig wc_mashTunLoss form-control" data-filter="positiveFloat" />
                </div>
                <div class="col-sm-3 col-xs-2 measurement">
                    <span data-unit="s">gals</span>
                    <span data-unit="m">liters</span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-5 control-label">
                    Boil Loss
                    <span class="helptip" original-title="The amount of wort lost to evaporation per hour when boiling.  Average is 1 gallon per hour">&nbsp;</span>
                </label>
                <div class="col-sm-4 col-xs-10">
                    <input type="text" data-name="s_BoilLoss" value="@Model.BoilLoss" class="wc_trig wc_boilLoss form-control" data-filter="positiveFloat" />
                </div>
                <div class="col-sm-3 col-xs-2 measurement">
                    <span data-unit="s">gals/hour</span>
                    <span data-unit="m">liters/hour</span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-5 control-label">
                    Grain Absorption
                    <span class="helptip" original-title="The amount of water that is absorbed into the grain during the mash. Average is .1 to .2 gal/lb">&nbsp;</span>
                </label>
                <div class="col-sm-4 col-xs-10">
                    <input type="text" data-name="s_MashGrainAbsorption" value="@Model.MashGrainAbsorption" class="wc_trig wc_grainAbsorption form-control" data-filter="positiveFloat" />
                </div>
                <div class="col-sm-3 col-xs-2 measurement">
                    <span data-unit="s">gals/lb</span>
                    <span data-unit="m">liters/kg</span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-5 control-label">
                    Sparge Grain Absorption
                    <span class="helptip" original-title="The amount of water that is absorbed into the grain when sparging. Average is .01">&nbsp;</span>
                </label>
                <div class="col-sm-4 col-xs-10">
                    <input type="text" data-name="s_SpargeGrainAbsorption" value="@Model.SpargeGrainAbsorption" class="wc_trig wc_spargeGrainAbsorption form-control" data-filter="positiveFloat" />
                </div>
                <div class="col-sm-3 col-xs-2 measurement">
                    <span data-unit="s">gals/lb</span>
                    <span data-unit="m">liters/kg</span>
                </div>
            </div>


        </div>

        <div class="col-sm-6" id="s_waterOut">

            <h3>Calculated Totals</h3>

            <div class="form-group">
                <label class="col-sm-5 control-label">
                    Runoff Volume
                </label>
                <div class="col-sm-4 col-xs-10">
                    <input type="text" data-name="s_BoilVolumeEst" value="@Model.BoilVolumeEst" disabled="disabled" class="wc_runoff form-control" />
                </div>
                <div class="col-sm-3 col-xs-2 measurement">
                    <span data-unit="s">gals</span>
                    <span data-unit="m">liters</span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-5 control-label">
                    Total Water Needed
                </label>
                <div class="col-sm-4 col-xs-10">
                    <input type="text" data-name="s_TotalWaterNeeded" value="@Model.TotalWaterNeeded" disabled="disabled" class="wc_totalWater form-control" />
                </div>
                <div class="col-sm-3 col-xs-2 measurement">
                    <span data-unit="s">gals</span>
                    <span data-unit="m">liters</span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-5 control-label">
                    Mash/Strike Volume
                </label>
                <div class="col-sm-4 col-xs-10">
                    <input type="text" data-name="s_StrikeWaterVolume" value="@Model.StrikeWaterVolume" disabled="disabled" class="wc_strikeVol form-control" />
                </div>
                <div class="col-sm-3 col-xs-2 measurement">
                    <span data-unit="s">gals</span>
                    <span data-unit="m">liters</span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-5 control-label">
                   Mash Tun Capacity
                </label>
                <div class="col-sm-4 col-xs-10">
                    <input type="text" data-name="s_MashTunCapacity" value="@Model.MashTunCapacity" disabled="disabled" class="wc_mashtuncapacity form-control" />
                </div>
                <div class="col-sm-3 col-xs-2 measurement">
                    <span data-unit="s">gals</span>
                    <span data-unit="m">liters</span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-5 control-label">
                    1st Runnings
                </label>
                <div class="col-sm-4 col-xs-10">
                    <input type="text" data-name="s_FirstRunningsVolume" value="@Model.FirstRunningsVolume" disabled="disabled" class="wc_firstRunnings form-control" />
                </div>
                <div class="col-sm-3 col-xs-2 measurement">
                    <span data-unit="s">gals</span>
                    <span data-unit="m">liters</span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-5 control-label">
                    Sparge Volume
                </label>
                <div class="col-sm-4 col-xs-10">
                    <input type="text" data-name="s_SpargeWaterVolume" value="@Model.SpargeWaterVolume" disabled="disabled" class="wc_spargeVol form-control" />
                </div>
                <div class="col-sm-3 col-xs-2 measurement">
                    <span data-unit="s">gals</span>
                    <span data-unit="m">liters</span>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-5 control-label">
                    Strike Temperature
                </label>
                <div class="col-sm-4 col-xs-10">
                    <input type="text" data-name="s_StrikeWaterTemp" value="@Model.StrikeWaterTemp" disabled="disabled" class="wc_strikeTemp form-control" />
                </div>
                <div class="col-sm-3 col-xs-2 measurement">
                    <span>@Html.Raw("&deg;")<span data-unit="s">F</span><span data-unit="m">C</span></span>
                </div>
            </div>



        </div>
    </div>
</form>*@
