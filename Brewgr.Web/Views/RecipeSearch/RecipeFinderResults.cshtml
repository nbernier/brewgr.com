@model Brewgr.Web.Models.RecipeSearchResultsViewModel

@{
    ViewBag.Title = "We've Found " + Model.Recipes.Count + " Recipes";
}

<div class="hidden-xs hidden-sm col-md-2"></div>
<div class="col-md-8">
@if (Model.Recipes.Any())
{
    @Html.Partial("_RecipeList", Model.Recipes)
}
else
{
    <p class="no-search-results">We couldn't find any recipes that match your search terms</p>
}
</div>
<div class="hidden-xs hidden-sm col-md-2"></div>
